<h1 align="center">Creating a new ticket</h1>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@ticket, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :subject %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :subject, class: "form-control", placeholder: "Your Subject", autofocus: true %>
        </div>
      </div>
      
      <!-- Need to fix category input -->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :category_id %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :category_id, class: "form-control", placeholder: "Category" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :message %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :message, rows: 8, class: "form-control", placeholder: "Your Message" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-5">
     [ <%= link_to "Cancel and return to list", tickets_path %> ]
    </div>
  </div>
</div>