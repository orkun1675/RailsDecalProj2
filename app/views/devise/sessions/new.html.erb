<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Login Form</title>
  <%= stylesheet_link_tag 'application' %>
  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
  <section class="container">
    <div class="login">
      <h1>Login to MoonGate</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p><%= f.text_field :nickname, autofocus: true, :placeholder => "Nickname" %></p>
        <p><%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %></p>
        <p class="remember_me">
          <label>
            <%= f.check_box :remember_me %>
            Remember me on this computer
          </label>
        </p>
        <p class="submit"><%= f.submit "Login" %></p>
      <% end %>
    </div>

    <div class="login-help">
      <p>Forgot your password? <a href="<%= new_password_path(resource_name) %>">Click here to reset it</a>.</p>
    </div>
  </section>
</body>
</html>